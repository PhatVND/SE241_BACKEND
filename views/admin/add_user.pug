      rel="stylesheet"
      )
    link(
      href="/css/add_printers.css" 
      rel="stylesheet"
      )
  body
    .banner
      .navbar
        img(
          alt="" 
          src="/image/LogoSPSS-removebg.png"
          )
        ul
          li
            a(href="/") Trang chủ
          li
            a(href="/admin/printers/index") Các máy in
          li
            a(href="/admin/add_users/index") Quản lý người dùng
          li
            a(href="/admin/setup") Setup
          li#account
            a(href="/user/info")
              i.bx.bx-user
      .container
        h2 Thêm người dùng
        form#purchaseForm
          label(for="addEmailUser") Nhập Email người dùng
          input#addEmailUser(
            placeholder="helloworld@gmail.com" 
            required="" 
            min="1" 
            type="text"
            )
          label(for="addUserNameUser") Nhập UserName người dùng
          input#addUserNameUser(
            placeholder="Hello World" 
            required="" 
            min="1" 
            type="text"
            )
          label(for="addPasswordUser") Nhập mật khẩu người dùng
          input#addPasswordUser(
            placeholder="123456" 
            required="" 
            min="1" 
            type="text"
            )
          label(for="addYearUser") Chọn năm
          select#printerLocation(name="addYearUser" required="")
            option(value="1") Năm 1
            option(value="2") Năm 2
            option(value="3") Năm 3
            option(value="4") Năm 4

          label(for="addRoleUser") Role
          select#printerLocation(name="addRoleUser" required="")
            option(value="ADMIN") ADMIN
            option(value="USER") USER
          button#submitButton(
            type="button"
            ) Thêm người dùng
        p#addResultMessage
      footer.footer
        .footer-logo
          img(
            alt="Logo" 
            src="/image/01_logobachkhoatoi.png"
            )
        .footer-contact
          p Cơ sở Lý Thường Kiệt: 268 Lý Thường Kiệt, Phường 14, Quận 10, TP. HCM
          p
            | Cơ sở Dĩ An: Khu phố Tân Lập, Phường Đông Hòa, TP. Dĩ An, Tỉnh Bình
            |   Dương
          p Email: contact@website.com
          p Điện thoại: +84 123 456 789
        .footer-copyright
          p © Bản quyền thuộc Trường Đại học Bách khoa - ĐHQG-HCM
