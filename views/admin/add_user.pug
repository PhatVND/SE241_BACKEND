  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Print History
    link(
      href="/css/print-history.css" 
      rel="stylesheet"
      )
    link(
      referrerpolicy="no-referrer" 
