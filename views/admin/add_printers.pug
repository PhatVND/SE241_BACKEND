  body
    .banner
      .navbar
        img(
          alt="" 
          src="/image/LogoSPSS-removebg.png"
          )
        ul
          li
            a(href="/") Trang chủ
          li
            a(href="/admin/printers/index") Các máy in
          li
            a(href="/admin/add_users/index") Quản lý người dùng
          li
            a(href="#") Home
          li#account
            a(href="/user/info")
              i.bx.bx-user
      .container
        h2 Thêm máy in
        form#purchaseForm
          label(for="addNamePrinter") Nhập tên máy in
          input#addNamePrinter(
            placeholder="H1-101" 
            required="" 
            min="1" 
            type="text"
            )
          label(for="printerLocation") Vị trí toà đặt
          select#printerLocation(required="")
            option(value="H6") H6
            option(value="H1") H1
            option(value="H2") H2
            option(value="H3") H3
            option(value="Nhà thi đấu") Nhà thi đấu
          button(
            id = "addPrinterButton" 
            type="button"
            ) Thêm máy in
        p#purchaseResultMessage
        script(src = "/js/add_printers.js")
