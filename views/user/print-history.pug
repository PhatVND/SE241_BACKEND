      rel="stylesheet"
      )
  body
    .banner
      .navbar
        img(
          alt="" 
          src="/image/LogoSPSS-removebg.png"
          )
        ul
          li
            a(href="/") TRANG CHỦ
          li
            a(href="/") DỊCH VỤ
          li
            a(href="/") LIÊN HỆ
          li
            a(href="/") HOME
          li#account
            a(href="/user/info")
              i.bx.bx-user
      .container
        .inner-main
          .col-12.inner-title Lịch sử in ấn
          .inner-sort(sort='')
            select.form-control(name='sort' sort-select='')
              option(value='name-desc') Tên máy in giảm dần
              option(value='name-asc') Tên máy in tăng dần
            button.btn.btn-danger.mt-2(sort-clear='')
              | Clear
          .inner-content
            each history in historys
              .col-3.inner-print-time
                .inner-printId
                  i.fa-solid.fa-id-card-clip
                  | #{history.fileName}
                .inner-time
                  i.fa-regular.fa-clock
                  | #{history.datePrinting}
                .print-place
                  i.fa-solid.fa-map-pin
                  | #{history.Location}
